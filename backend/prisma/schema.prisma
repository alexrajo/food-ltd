generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model dishes {
  dish_id             Int       @id @default(autoincrement())
  title               String?
  ingredients         String?
  instructions        String?
  image_name          String?
  cleaned_ingredients String?
  reviews             reviews[]

  @@map("Dish")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model reviews {
  review_id Int    @id @default(autoincrement())
  title     String
  rating    Int
  comment   String
  dish_id   Int
  dishes    dishes @relation(fields: [dish_id], references: [dish_id], onDelete: Cascade)

  @@map("Review")
}
